[user]
  name = Giacomo Tagliabue
  email = giacomo.tag@gmail.com
[credential]
[push]
  default = simple
[core]
  editor = C:/Users/giaco_000/st3/sublime_text.exe
  # @see https://help.github.com/articles/dealing-with-line-endings
  # Mac
  # autocrlf = input
  # PC
  autocrlf = true
[alias]
  # courtesy of Phil Haack: http://haacked.com/archive/2014/07/28/github-flow-aliases/
  co = checkout
  cowd = checkout -- .
  up = !git pull --rebase --prune $@ && git submodule update --init --recursive
  cob = checkout -b
  cm = commit -m
  undo = reset HEAD~1 --mixed
  amend = commit --amend --no-edit
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
  bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
  publish = push --set-upstream origin
  ignore = update-index --assume-unchanged
  renore = update-index --no-assume-unchanged
